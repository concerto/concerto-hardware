<%# This partial will be read in the context of the main Concerto app.  %>
<%# URL helpers require use of the 'hardware' routing helper.           %>
<%# ConcertoHardware authorization rules are automatically provided.    %>
<p><b>Hardware:</b>
<% if @player.nil? %>
  None (<%= link_to 'add', hardware.new_player_path(:screen_id => @screen.id) %>)
<% else %>
  <% if can? :read, @player %>
    <%= link_to @screen.name+" Player", [hardware, @player] %>
    <% if can? :update, @player %>
      (<%=link_to "edit", hardware.edit_player_path(@player) %>)
    <% end %>
  <% else %>
    <%= @screen.name+" Player" %>
  <% end %>
<% end %>
