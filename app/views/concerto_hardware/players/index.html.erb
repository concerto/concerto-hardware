<h1>Listing players</h1>
<table>
  <tr>
    <th>Secret</th>
    <th>Ip address</th>
    <th>Screen</th>
    <th>Activated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.secret %></td>
    <td><%= player.ip_address %></td>
    <td><%= player.screen_id %></td>
    <td><%= player.activated %></td>
    <td><%= link_to 'Show', [hardware, player] %></td>
    <td><%= link_to 'Edit', hardware.edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', [hardware, player], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Player', hardware.new_player_path %>

